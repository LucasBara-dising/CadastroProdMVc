            @Html.EditorFor(model => model.CodigoProd)
            @Html.ValidationMessageFor(model => model.CodigoProd)
        </div>

        <div class="editor-label">
            @Html.LabelFor(models => Model.NomeProd)
        </div>
        <div class="edior-field">
            @Html.EditorFor(model => model.NomeProd)
            @Html.ValidationMessageFor(model => model.NomeProd)
