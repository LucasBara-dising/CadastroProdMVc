            @Html.EditorFor(model => model.PesoProd)
            @Html.ValidationMessageFor(model => model.PesoProd)
        </div>

        <div class="editor-label">
            @Html.LabelFor(models => Model.CategoriaProd)
        </div>
        <div class="edior-field">
            @Html.EditorFor(model => model.CategoriaProd)
